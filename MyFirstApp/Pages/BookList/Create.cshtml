@page
@model MyFirstApp.Pages.BookList.CreateModel

<br />
<h2 class="text_info">Crear Nuevo Libro</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Nombre"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Nombre" class="form-control" />
            </div>
            <span asp-validation-for="Book.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Autor"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Autor" class="form-control" />
            </div>
            <span asp-validation-for="Book.Autor" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-4">
                <input type="submit" value="Crear" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Volver</a>
            </div>
        </div>

    </form>
</div>