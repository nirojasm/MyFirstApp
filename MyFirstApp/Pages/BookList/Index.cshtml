@page
@model MyFirstApp.Pages.BookList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-7">
        <h2 class="text-info">BookList</h2>
    </div>
    <div class="col-4">
        <a asp-page="Create" class="btn btn-info form-control text-white">Crear Nuevo Libro</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Nombre"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Autor)*@
                            <label asp-for="Books.FirstOrDefault().Autor"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach(var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Autor)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.ISBN)
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm">Eliminar</button>
                                <a class="btn btn-success btn-sm text-white">Editar</a>
                            </td>
                        </tr>
                    }
                    </table>
            }
            else
            {
                <p>No books avaliable.</p>
            }
        </form>
    </div>
</div>

